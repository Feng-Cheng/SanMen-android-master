<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/big_bg"
    android:orientation="vertical">


    <include layout="@layout/content_titile"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/mor_bg"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_adm_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_adm_photo"/>

                <TextView
                    android:id="@+id/tv_adm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_adm_photo"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textColor"/>

                <TextView
                    android:id="@+id/tv_adm_tele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_adm_photo"
                    android:layout_below="@+id/tv_adm_name"
                    android:layout_marginLeft="5dp"/>

                <ImageView
                    android:id="@+id/iv_exit"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_exit"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_inform_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_inform_change"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inform_change"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/textColor"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_auditor_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_authiro_inform"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auditoriuminfo"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/textColor"/>

                <TextView
                    android:id="@+id/tv_authiro_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_work_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_work_inform"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_report"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/textColor"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_inform_put"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_mine_inform"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inform_put"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:id="@+id/tv_inform_put_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activty_announce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_mine_activty_announce"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activty_announce"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/textColor"/>
                <TextView
                    android:id="@+id/tv_activty_announce_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_three"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activty_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_mine_activity_show"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activty_show"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/textColor"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_list_manger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_mine_list_manger"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_manger"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/textColor"/>
            </LinearLayout>

          <!--  <LinearLayout
                android:id="@+id/ll_declare_manger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:gravity="center_vertical"
                android:background="@color/bg_white">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_adm_photo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/declare_manger"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/textColor"/>
            </LinearLayout>-->

            <LinearLayout
                android:id="@+id/ll_Online_advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_mine_online_advice"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Online_advice"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/textColor"/>

                <TextView
                    android:id="@+id/tv_online_advices_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_raffic_statistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_liuliang_statise"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/raffic_statistics"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/textColor"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_work_statitstics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_work_statise"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_statitstics"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/textColor"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wendang_manager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@color/mor_bg"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_wendang_report" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/wendang_manager"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_three" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_score_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@color/mor_bg"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/icon_score" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/score_rank"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_three" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_help_wendang_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_help_manager"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/help_wendang_manager"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/textColor"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:background="@color/mor_bg">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/icon_download"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载地址"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/text_three"
                    android:textColor="@color/textColor"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>
