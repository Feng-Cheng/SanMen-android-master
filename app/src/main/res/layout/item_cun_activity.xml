<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">



    <TextView
        android:id="@+id/tv_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:textSize="@dimen/text_size"
        android:textColor="#333331"
        />

    <TextView
        android:id="@+id/tv_shen_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_activity_title"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:textSize="@dimen/text_size_four"
        />

    <TextView
        android:id="@+id/tv_isShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/text_three"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_activity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_activity_title"
        android:layout_below="@+id/tv_activity_title"
        android:textSize="@dimen/text_size_four"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_cun_activity"
        />

    <TextView
        android:id="@+id/tv_activity_put_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_activity_time"
        android:layout_alignBottom="@+id/tv_activity_time"
        android:layout_marginLeft="22dp"
        android:textColor="@color/text_cun_activity"
        android:textSize="@dimen/text_size_four"/>


<!--    <TextView
        android:id="@+id/tv_activity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:minLines="2"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_below="@+id/tv_activity_put_name"
        android:layout_alignLeft="@+id/tv_activity_time"
        android:textSize="@dimen/text_three"
        android:textColor="#666664"
        android:text="aaa"/>-->

    <me.codeboy.android.aligntextview.AlignTextView
        android:id="@+id/tv_activity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:minLines="2"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_below="@+id/tv_activity_put_name"
        android:layout_alignLeft="@+id/tv_activity_time"
        android:textSize="@dimen/text_three"
        android:textColor="#666664"/>


    <TextView
        android:id="@+id/tv_checkmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_activity_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="@string/read_more"
        android:textColor="@color/datepick_surance_blue"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_checkmore"
        android:background="#e0e0e0"/>


</RelativeLayout>
