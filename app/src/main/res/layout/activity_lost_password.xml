<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/content_titile"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background">

        <LinearLayout
            android:id="@+id/ll_input_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="30dp"
            android:background="@color/bg_white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/rl_backgroud_regist">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/name"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/textColor"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_name"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size"
                    android:hint="@string/phone_hint"
                    android:padding="10dp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/rl_backgroud_regist">

                <EditText
                    android:id="@+id/ed_yanzhengma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:textSize="@dimen/text_size"
                    android:layout_toLeftOf="@+id/tv_cut_line"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    />
                <TextView
                    android:id="@+id/tv_cut_line"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#e0e0e0"
                    android:layout_toLeftOf="@+id/tv_send_message"/>

                <TextView
                    android:id="@+id/tv_send_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="获取验证码"
                    android:textColor="@color/permissionBgColorBlue"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/rl_backgroud_regist">

                <TextView
                    android:id="@+id/tv_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/password"
                    android:textColor="@color/textColor"
                    android:padding="10dp"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_pwd"
                    android:layout_toLeftOf="@+id/rl_changeShow"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:hint="@string/pas_hint"
                    android:padding="10dp"
                    android:textSize="@dimen/text_size"
                    />
                <RelativeLayout
                    android:id="@+id/rl_changeShow"
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/btn_selector_ishow_1"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pwd_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/rl_backgroud_regist">

                <TextView
                    android:id="@+id/tv_pas_agian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="确认密码"
                    android:padding="10dp"
                    android:textColor="@color/textColor"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/et_pas_agian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_pas_agian"
                    android:layout_toLeftOf="@+id/rl_changeShow1"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:inputType="textPassword"
                    android:gravity="center_vertical"
                    android:hint="@string/pas_agian_hint"
                    android:textSize="@dimen/text_size"
                    android:padding="10dp"
                    />
                <RelativeLayout
                    android:id="@+id/rl_changeShow1"
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/btn_selector_ishow_2"
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_input_regist"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_input_login"
            android:layout_marginTop="25dp"
            />
        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="确定"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/tv_input_regist"
            android:background="@drawable/button_selector"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>



</LinearLayout>
