<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/mor_bg"
    android:id="@+id/ll_all_point">

    <TextView
        android:id="@+id/tv_home_share_theme"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_two"
        android:textColor="@color/textColor_two"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_home_share_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size"
        android:textColor="@color/textColor"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_home_share_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size"
        android:textColor="@color/textColor"
        android:padding="5dp"/>
</LinearLayout>
