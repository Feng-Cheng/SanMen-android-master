<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/content_titile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:gravity="center_vertical"
        android:background="@color/bg_white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/activity_them"
            android:layout_marginLeft="15dp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_home_share_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/textColor_two"
            android:textSize="@dimen/text_size"
            android:padding="5dp"/>
    </LinearLayout>
    <include layout="@layout/cut_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:gravity="center_vertical"
        android:background="@color/bg_white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/time"
            android:layout_marginLeft="15dp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_home_share_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/textColor_two"
            android:textSize="@dimen/text_size"
            android:padding="5dp"/>
    </LinearLayout>
    <include layout="@layout/cut_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:gravity="center_vertical"
        android:background="@color/bg_white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="需求内容"
            android:layout_marginLeft="15dp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_home_share_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/textColor_two"
            android:textSize="@dimen/text_size"
            android:padding="5dp"/>
    </LinearLayout>

    <include layout="@layout/cut_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:gravity="center_vertical"
        android:background="@color/bg_white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/organizer"
            android:layout_marginLeft="15dp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/tv_home_share_organizer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/textColor_two"
            android:textSize="@dimen/text_size"
            android:padding="5dp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_share_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
