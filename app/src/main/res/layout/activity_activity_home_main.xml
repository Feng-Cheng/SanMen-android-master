<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#EBECF0">

    <include layout="@layout/content_titile"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F8F4"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/query_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择要查询的乡镇"
            android:background="@drawable/text_selector"
            android:textColor="#AAABAD"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/btn_activity_home_search"
            android:drawableRight="@drawable/ic_down"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btn_activity_home_search"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_white"
            android:background="@drawable/ic_search"
            android:layout_alignTop="@+id/query_et"
            android:layout_alignBottom="@+id/query_et"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/mor_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn_home_activity_annonce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/activty_announce"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/bg_white"
                android:background="@drawable/button_selector"
                />
            <Button
                android:id="@+id/btn_home_ziyuan_manger"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="资源管理"
                android:layout_marginLeft="5dp"
                android:textColor="@color/bg_white"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_selector"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_activtity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>


</LinearLayout>
