        android:layout_alignLeft="@+id/tv_base_name"
        more:maxLine="2"
        more:textColor="@color/textColor"
        more:textSize="@dimen/text_size"
        />-->

    <TextView
        android:id="@+id/tv_ohter_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ohter_content"
        android:textColor="@color/textColor"
        android:layout_below="@id/tv_base_main"
        android:layout_alignLeft="@id/tv_base_main"/>

    <TextView
        android:id="@+id/tv_ohter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无"
        android:textColor="@color/textColor_two"
        android:layout_below="@id/tv_ohter_content"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@id/tv_base_main"/>
